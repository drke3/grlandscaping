---
import Banner from '../components/Banner.astro';
import Layout from '../layouts/Layout.astro';
export function getStaticPaths() {
    return [
        { params: { city: "los-angeles" } },
        { params: { city: "hollywood" } },
        { params: { city: "beverly-hills" } },
        { params: { city: "santa-monica" } },
        { params: { city: "pasadena" } },
        { params: { city: "long-beach" } },
        { params: { city: "culver-city" } },
        { params: { city: "burbank" } }
    ];
}
let { city } = (Astro.params);
function convert(slug) {
  return slug
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}
city = convert(city);
